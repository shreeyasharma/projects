<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee9e9"
    >

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee9e9"
        android:orientation="vertical"
        >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#000000"
            android:src="@drawable/sd"
            android:id="@+id/lblTxt2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="200sp"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:background="@drawable/mytext"

            android:shadowColor="#000000"
            android:textSize="20sp"
            android:textColor="#000000"
            android:id="@+id/lblTxt"

            android:enabled="true"
            android:focusable="true"
            android:textStyle="bold" />
        <TextView
            android:layout_marginTop="480sp"
            android:layout_marginLeft="170sp"
            android:layout_width="200dp"
            android:layout_height="50dp"


            android:shadowColor="#696969"

            android:textColor="#000000"
            android:id="@+id/pb"
            android:textSize="15sp"
            android:enabled="true"
            android:focusable="true"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/mast"
            android:text="LIKE"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:id="@+id/like"


            android:src="@drawable/like"
            android:layout_below="@id/lblTxt"
            />

        <TextView
            android:layout_marginTop="660dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"

            android:textSize="25sp"
            android:textColor="@color/white"


            android:id="@+id/txt166"

            />
        <Button
            android:layout_marginTop="40dp"
            android:layout_marginLeft="140dp"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/bekar"
            android:text="DISLIKE"
            android:id="@+id/dislike"

            android:textColor="@color/white"
            android:textSize="15sp"
            android:src="@drawable/like"
            android:layout_below="@id/lblTxt"
            />
        <Button
            android:textSize="40sp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="290dp"
            android:id="@+id/comment"
            android:text=">"
            android:textAlignment="center"
            android:background="@drawable/su"
            android:layout_below="@id/lblTxt"
            />
        />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"

            android:textSize="15sp"
            android:textColor="#000000"

            android:layout_below="@id/dislike"
            android:id="@+id/txt61"

            />


    </RelativeLayout>
</ScrollView>